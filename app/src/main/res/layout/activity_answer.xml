<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.working_group.votingapp.activity.AnswerActivity">

    <Button
        android:id="@+id/return_listActivity"
        android:text="@string/return_listPage"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_width="106dp"
        android:layout_height="43dp"
        app:layout_editor_absoluteY="452dp"
        app:layout_editor_absoluteX="47dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="206dp"
        android:layout_height="25dp"
        android:text="タイトル"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_editor_absoluteY="35dp"
        app:layout_editor_absoluteX="89dp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="239dp"
        android:layout_height="51dp"
        android:text="質問内容"
        android:gravity="center"
        android:textSize="17sp"
        app:layout_editor_absoluteY="95dp"
        app:layout_editor_absoluteX="73dp" />

    <RadioButton
        android:id="@+id/answer1"
        android:layout_width="176dp"
        android:layout_height="27dp"
        android:text="選択肢A"
        app:layout_editor_absoluteX="104dp"
        app:layout_editor_absoluteY="190dp" />

    <RadioButton
        android:id="@+id/answer2"
        android:layout_width="176dp"
        android:layout_height="27dp"
        android:text="選択肢B"
        app:layout_editor_absoluteX="104dp"
        app:layout_editor_absoluteY="225dp" />

    <RadioButton
        android:id="@+id/answer3"
        android:layout_width="176dp"
        android:layout_height="27dp"
        android:text="選択肢C"
        app:layout_editor_absoluteX="104dp"
        app:layout_editor_absoluteY="260dp" />

    <RadioButton
        android:id="@+id/answer4"
        android:layout_width="176dp"
        android:layout_height="27dp"
        android:text="選択肢D"
        app:layout_editor_absoluteX="104dp"
        app:layout_editor_absoluteY="295dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="コメント:"
        app:layout_editor_absoluteX="65dp"
        app:layout_editor_absoluteY="379dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="216dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_editor_absoluteX="137dp"
        app:layout_editor_absoluteY="370dp" />

</android.support.constraint.ConstraintLayout>
